.header {
  display: flex;
  width: 100%;
  height: 10rem;
  background-image: linear-gradient(#FFC03D, rgba(255, 0, 0, 0));
}
.header .img1 image {
  margin-top: 2rem;
  margin-left: 1rem;
  height: 6rem;
  width: 5rem;
}
.header .characters {
  display: flex;
  flex-direction: column;
  margin-top: 4rem;
  margin-left: 3rem;
}
.body {
  height: 10rem;
  width: 100%;
  display: flex;
}
.body .bodytext {
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 2rem;
}
.body image {
  margin-top: 4rem;
  margin-right: 2rem;
  width: 4rem;
  height: 4rem;
}
.statePicPreMain {
  height: 10.5rem;
  background-color: #8B91AB;
  border-radius: 10%;
  overflow: hidden;
}
.statePicPreMain .statePicPre {
  margin-top: 0.5rem;
}
.statePicPreMain .statePicPre .statePicPreSon {
  width: 100%;
  margin-left: 35%;
}
.statePicPreMain .statePicPre .btn {
  display: flex;
  margin-top: 0.2rem;
  border-radius: 20%;
}
.statePicPreMain .statePicPre .btn .btnSon {
  border-radius: 50%;
}
