.userhead {
  width: 100%;
  height: 10rem;
  background-image: linear-gradient(#FFC03D, rgba(255, 0, 0, 0));
  overflow: hidden;
  position: relative;
}
.userhead .icon_Name {
  position: absolute;
  margin-top: 2rem;
  margin-left: 2rem;
  display: flex;
  align-items: center;
}
.userhead .icon_Name .userName {
  margin-left: 0.5rem;
}
.userhead .searchData {
  position: absolute;
  width: 80%;
  margin-left: 10%;
  border-radius: 5px;
  height: 4rem;
  margin-top: 4.5rem;
  background-color: #cdd5f8;
  display: flex;
  align-items: center;
}
.userhead .searchData .searchHistory {
  height: 3.5rem;
  width: 50%;
  border-right: 0.1rem solid white;
}
.userhead .searchData .searchHistory .userSearchData {
  text-align: center;
  height: 1.7rem;
}
.userhead .searchData .searchStore {
  height: 3.5rem;
  width: 50%;
}
.userhead .searchData .searchStore .userSearchData {
  text-align: center;
  height: 1.7rem;
}